{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "outDir": "out"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "output",
    "**/*.spec.ts",
    "**/*.js",
  ]
}